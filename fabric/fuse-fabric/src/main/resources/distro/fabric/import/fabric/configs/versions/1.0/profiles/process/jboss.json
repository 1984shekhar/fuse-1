{
    "launchScript": "bin/init.d/jboss-as-standalone.sh",
    "pidFile": "var/run/jboss.pid",

    "deployPath": "standalone/deployments",
    "sharedLibraryPath": "standalone/lib/ext",

    "environment": {
        "JBOSS_PIDFILE": "var/run/jboss.pid",
        "JBOSS_HOME": ".",
        "JBOSS_CONSOLE_LOG": "var/log/console.log",
        "JBOSS_USER": "$USER"
    },

    "installCommands": [
        "mkdir var",
        "mkdir var/log",
        "mkdir var/run"
    ]
}